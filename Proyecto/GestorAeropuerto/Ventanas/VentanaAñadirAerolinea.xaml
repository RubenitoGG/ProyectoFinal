<Window x:Class="GestorAeropuerto.Ventanas.VentanaAñadirAerolinea"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorAeropuerto.Ventanas"
        mc:Ignorable="d"
        Title="Aerolínea" Height="250" Width="400" ResizeMode="NoResize">
    <Grid>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="70,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textoUsuario" HorizontalAlignment="Left" Height="28" Margin="81,56,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="255"/>
        <Label Content="Teléfono:" HorizontalAlignment="Left" Margin="70,94,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textoContraseña" HorizontalAlignment="Left" Height="25" Margin="81,120,0,0" Text="" VerticalAlignment="Top" Width="255"/>
        <Button x:Name="BotonAñadir" Content="Añadir" HorizontalAlignment="Center" Margin="160,161,160,28" VerticalAlignment="Center" Width="74" Click="BotonAñadir_Click"/>
    </Grid>
</Window>
