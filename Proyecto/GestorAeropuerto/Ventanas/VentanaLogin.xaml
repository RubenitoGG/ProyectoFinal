<Window x:Class="GestorAeropuerto.Ventanas.VentanaLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorAeropuerto.Ventanas"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="400" ResizeMode="NoResize">
    <Grid>
        <Label Content="Usuario:" HorizontalAlignment="Left" Margin="70,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textoUsuario" HorizontalAlignment="Left" Height="28" Margin="81,56,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="255"/>
        <Label Content="Contraseña:" HorizontalAlignment="Left" Margin="70,94,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="textoContraseña" HorizontalAlignment="Left" Height="25" Margin="81,120,0,0" Password="" VerticalAlignment="Top" Width="255"/>
        <Button x:Name="BotonEntrar" Content="Entrar" HorizontalAlignment="Center" Margin="0,161,0,28" VerticalAlignment="Center" Width="74" Click="BotonEntrar_Click"/>

    </Grid>
</Window>
